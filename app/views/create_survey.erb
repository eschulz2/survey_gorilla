<div class="signin_container">
  <h1>Create a new survey!</h1>
  <form action="/create_survey" method="POST">
    <label for="survey_name">Name:</label>
      <input id="survey_name" type="text" name="name" placeholder="Survey Name"><br><br>
    <label for="question">Question:</label> 
      <input id="question" type="text" name="question" placeholder="Question?"><br>
    <label for="question">Option 1:</label> 
      <input id="question" type="text" name="options[1]" placeholder="Option 1"><br>
    <label for="question">Option 2:</label> 
      <input id="question" type="text" name="options[2]" placeholder="Option 2"><br>
    <input type="submit" value="Submit Survey">
  </form>

</div>
